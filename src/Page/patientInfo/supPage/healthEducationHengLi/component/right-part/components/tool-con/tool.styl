.tool-contain
  background-image: linear-gradient(-180deg, #F8F8FA 0%, #EBECF0 100%);
  border: 1px solid #CBD5DD;
  border-left 0
  height 36px
  .item-box
    font-size: 12px;
    color: #333333;
    border-right 1px solid #d4d4d4
    cursor pointer
    &.disabled
      color #999 !important;
      pointer-events none
      i 
        color #999 !important;
    &.item-box:last-child
      border 0
    &:hover 
      font-weight bold
      .icon-box
        background #fafafa
    .icon-box
      height 20px
      line-height 18px
      background #fff
      // box-shadow: 0 0 1px 0 rgba(0,0,0,0.50);
      border 1px solid #CBD5DD
      border-radius: 4px;
      padding 0 8px
      box-sizing border-box
      transform scale(.9, .9)
      margin-right 4px
      i 
        font-size 12px
        font-weight normal !important
.switch-box
  margin-right 13px        