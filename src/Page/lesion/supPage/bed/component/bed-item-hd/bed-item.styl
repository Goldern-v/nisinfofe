.card-box {
  background: #fff;
  height: 174px;
  min-width: 200px;
  overflow: hidden;
  position: relative;
  border: 1px solid #CBD5DD;
  border-radius: 2px;
  cursor: pointer;
  position: relative;
  top: 0;
  transition: all 0.3s;

  &:hover {
    box-shadow: 0 4px 7px 0 rgba(0, 0, 0, 0.1);
    position: relative;
    top: -5px;
  }

  .card-text {
    margin-left: 76px;
    margin-top: 14px;
    margin-right: 3px;

    .name {
      font-size: 16px;
      color: #333333;
      margin-bottom: 10px;
      font-weight: bold;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      margin-right 50px
    }

    .info {
      font-size: 13px;
      color: #687179;
      margin-bottom: 12px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }

    .aside {
      font-size: 13px;
      color: #687179;
      margin-bottom: 7px;
      line-height: 14px
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }
  }
}

.user-img {
  width: 52px;
  height: 105px;
  overflow: hidden;
  border-radius: 52px;
  position: absolute;
  top: 12px;
  left: 12px;
  text-align: center;
  padding-top: 3px;
  // background: #aaa;
  &.type-1 {
    background: #FF0000;
  }

  &.type-2 {
    background: #0000FF;
  }

  &.type-3 {
    background: #006400;
  }

  &.type-4 {
    background: #FF00FF;
  }
  &.type-5 {
    background: #FFD700;
  }
  img {
    width: 46px;
    height: 46px;
    overflow: hidden;
    border-radius: 50%;
    object-fit: cover;
  }

  p {
    text-align: center;
    font-size: 15px;
    color: #FFFFFF;
    color: #fff;
    letter-spacing: 0;
    margin-top: 8px;

    &:last-child {
      margin-top: 8px;
    }
  }
}

