.bed-box
  height 110px
  float left
  padding 5px
  box-sizing: border-box
  cursor pointer

  .bed-box-inner
    position relative
    background: rgba(255, 255, 255, 1);
    border-radius: 2px;
    border: 1px solid #CBD5DD;
    height 100%
    box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.1);

    &.infectFlag {
      background: #E6D8F9;
    }

    &.bornFlag {
      background: #D1EDD6;
    }

    .part-1
      height 25%
      padding: 0 14px
      display: flex
      align-items: center

      .bed-label
        font-size: 17px;
        font-weight: bold;
        color: rgba(51, 51, 51, 1);

    .part-2
      height 25%
      font-size 17px
      color #000000
      display: flex
      justify-content: center
      align-items: center
      font-weight bold;

      > div
        overflow hidden
        text-overflow: ellipsis
        white-space nowrap

    .part-3
      height 25%
      display flex
      justify-content: center
      align-items: center
      font-size: 13px;
      color: rgba(104, 113, 121, 1);

    .part-4
      height 25%
      border-top: 1px solid #ccc;
      display: flex
      align-items: center
      padding 0 5px

      .table-name
        background: #FF263C;
        border-radius: 2px;
        width 18px
        height 17px;
        margin-left 4px
        font-size: 12px;
        color: #000;
        text-align: center
        line-height 17px
        cursor pointer
        border: 1px solid #666
        white-space: nowrap

.null-bed
  height 100%
  position relative
  display flex
  justify-content: center
  align-items: center

  img
    width 60%

  .null-bedLabel
    position absolute
    top 5px
    left 10px
    font-size: 20px;
    font-weight: bold;
    color: rgba(51, 51, 51, 1);

.label-con
  position absolute
  top 0px
  right 5px
  display: flex
  flex-direction: row-reverse

  .label-box
    width 18px
    height 18px
    background: #E13430;
    font-size: 13px;
    color: #000;
    display: flex
    justify-content: center
    align-content: center
    box-sizing: border-box
    padding-top 2px
    font-weight: lighter
    margin-left 1px
    border-radius: 0 0 3px 3px
    border: 1px solid #666
    border-top: 0


.patient-icon
  width 18px
  height 18px
  position absolute
  top 10px
  right 50px;

.bed-modal
  width: 240px;
  min-height: 300px;
  background: rgba(255, 248, 177, 1);
  border: 1px solid #A9A9A9;
  position absolute
  top -1px
  right -240px;
  z-index 1000
  display none
  box-sizing: border-box
  padding 13px

  &:after
    width 14px
    height 14px
    position absolute
    top: 30px
    left -8px;
    background: rgba(255, 248, 177, 1);
    border-left: 1px solid #A9A9A9;
    border-bottom: 1px solid #A9A9A9;
    content: '';
    transform: rotate(45deg)

  &:hover
    display none !important

  .key
    font-size: 12px;
    color: #000
    line-height 14px

  .value
    font-size 12px;
    color: rgba(40, 79, 194, 1);
    line-height 14px

.bed-box-inner:hover .bed-modal
  display: block

.table-line
  margin-bottom 6px;

.xinru
  position absolute;
  top: 0;
  left: 0;
  width 0;
  height 0;
  border-width: 20px 20px 0 0;
  border-style: solid;
  border-color: transparent transparent;

  &.type-1
