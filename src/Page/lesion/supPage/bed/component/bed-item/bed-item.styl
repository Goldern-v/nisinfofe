  &.type-3
    border-color: rgb(0, 255, 0) transparent !important;

  &.type-4
    border-color: rgb(255, 192, 203) transparent !important;

.gl
  position absolute
  width: 30px;
  height: 16px;
  background: rgba(255, 255, 255, 1);
  border-radius: 9px;
  border: 1px solid
  right: 2px
  top 20px
  font-size 12px
  display flex;
  align-items: center
  justify-content: center

.point-box
  width 16px
  height 16px
  display: inline-block
  border: 1px solid #EAEEF1
  margin-left: 5px
  border-radius: 50%
  position relative

  &:after
    content: ''
    position absolute
    width 10px
    height 10px
    border-radius: 50%
    top: 0
    right 0
    bottom: 0
    left 0
    margin: auto

  &.red:after
    background: #E62C2C

  &.green:after
    background: #27A45E

