@media screen and (max-width: 1100px) {
  .bed-box {
    width: 14.28% !important;
  }

  .bed-box:nth-of-type(7n), .bed-box:nth-of-type(7n - 1) {
    .bed-modal {
      left: -240px !important;

      &:after {
        right -8px !important
        left auto !important
        border-left: 0 !important
        border-right: 1px solid #A9A9A9;
        border-bottom: 0 !important
        border-top: 1px solid #A9A9A9;
      }
    }
  }

  .bed-box:nth-child(7n+22):nth-last-child(-n+21),
  .bed-box:nth-child(7n+22):nth-last-child(-n+21) ~ .bed-box {
    .bed-modal {
      top: auto !important;
      bottom: -1px !important;

      &:after {
        top auto !important
        bottom: 30px !important
      }
    }
  }
}

